<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

  

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       
        android:background="@color/about_bg"
        android:fadingEdge="none"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:background="@drawable/login_head_style" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基于信息隐藏的WIFI共享"
                        android:textColor="@color/about_text_color"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_checkup_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/pp_xml_checknew_btn"
                android:text="检查更新"
                android:textColor="@color/about_text_color"
                android:textSize="18.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/btn_checkup_updat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pp_xml_btn_edition_up" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="作者:北京信息科技大学**学院**班级"
                        android:textColor="@color/about_textfoot_color"
                        android:autoLink="map"
                        android:textSize="16.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_first_mid" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:text="联系QQ：1154459804"
                        android:textColor="@color/about_textfoot_color"
                        android:autoLink="phone"
                        android:textSize="16.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pp_xml_btn_edition_down"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="联系邮箱：1154459804@qq.com"
                        android:autoLink="email"
                        android:textColor="@color/about_textfoot_color"
                        android:textSize="16.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10.0dip" >

                    <TextView
                        android:id="@+id/about_foot_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="copy right 翻版必究 "
                        android:textColor="@color/about_textbottom2_color"
                        android:textSize="10.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/about_foot_2"
                        android:layout_centerHorizontal="true"
                       
                        android:text="版权所有"
                        android:textColor="@color/about_textbottom1_color"
                        android:textSize="13.0sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>